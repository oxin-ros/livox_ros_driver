// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "Livox ROS Driver Workspace",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "LIVOX_SDK_BRANCH": "master",
            "LIVOX_SDK_BUILD_TYPE": "Debug",
            "ROS_DISTRO": "noetic",
            "PYTHON_VERSION": "python3" // For Noetic: 'python3'.
        }
    },
    "containerUser": "vscode",
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "XDG_RUNTIME_DIR": "/tmp/vscode",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    "runArgs": [
        "-it",
        "--rm",
        "--network", "host",
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined",
        // https://github.com/moby/moby/issues/38442
        "--security-opt", "apparmor=unconfined",
        "--runtime", "nvidia",
        "--gpus", "all",
        "--group-add=dialout",
        "--device=/dev/dri",
        "--volume", "${localEnv:HOME}/.ssh:/home/vscode/.ssh",
        "--volume", "${localWorkspaceFolder}/.vscode:/workspace/.vscode"
    ],
    "mounts": [
        "source=/dev,target=/dev,type=bind,consistency=cached",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
    ],
    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-iot.vscode-ros",
                "ms-python.python",
                "ms-python.isort",
                "ms-python.vscode-pylance",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "redhat.vscode-yaml",
                "shardulm94.trailing-spaces",
                "smilerobotics.urdf",
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one"
            ],
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    }
                }
            }
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/src,type=bind",
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    "updateRemoteUserUID": false,
    "initializeCommand": "xhost +local:docker",
    "postCreateCommand": "bash src/.devcontainer/rosdep-update.sh",
    "postStartCommand": "bash src/.devcontainer/configure-catkin.sh"
}
